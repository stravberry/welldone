{
  "functions": [
    {
      "source": "api/redirect-handler.js",
      "function": "api/redirect-handler.js"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api|_next|_static|favicon.ico|robots.txt|sitemap.xml|public|assets|admin).*)",
      "destination": "/api/redirect-handler?path=$1"
    },
    {
      "source": "/((?!api|_next|_static|favicon.ico|robots.txt|sitemap.xml|public|assets).*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/old-page",
      "destination": "/new-page",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}